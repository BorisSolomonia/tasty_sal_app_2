# Caddy configuration for Nine Tones App
# Standardized reverse proxy configuration

{
    # Global options
    email your-email@domain.com  # For Let's Encrypt certificates
    auto_https off  # Disable for IP-based setup initially
}

# HTTP setup for IP-based access
:80 {
    # Reverse proxy to Nine Tones app container
    reverse_proxy nine-tones-app:3000 {
        # Health check
        health_uri /
        health_interval 30s
        health_timeout 10s
        health_status 2xx
    }
    
    # API routes proxy to backend
    handle /api/* {
        reverse_proxy nine-tones-app:3001 {
            health_uri /health
            health_interval 30s  
            health_timeout 10s
            health_status 2xx
        }
    }
    
    # Logging
    log {
        output file /var/log/caddy/nine-tones.log
        format json
    }
}

# HTTPS setup for domain (uncomment when you have a domain)
